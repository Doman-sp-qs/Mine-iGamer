
  
    
    
    
    <!--リンク一覧-->
    <div class="row justify-content-center" style="width: 200px">
        
        <!--ロゴ-->
        <a class="navbar-brand text-dark d-flex align-items-center ml-5" href="/">
          <%#= image_tag('logo-30x30.png') %>
          <h1>LOGO</h1>
        </a>
        <% if customer_signed_in? %>
          <!--顧客ログイン時のヘッダー-->
          <div class="m-1">
            <%= link_to "マイページ", customer_path(current_customer), class: 'nav-link text-dark border border-secondary rounded' %>
          </div>
          <div class="m-1">
            <%= link_to "いいね一覧", favorites_path(current_customer), class: 'nav-link text-dark border border-secondary rounded' %>
          </div>
          <div class="m-1">
            <%= link_to "投稿一覧", posts_path, class: 'nav-link text-dark border border-secondary rounded' %>
          </div>
          <div class="m-1">
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-dark border border-secondary rounded' %>
          </div>
        <% elsif admin_signed_in? %>
          <!--管理者ログイン時のヘッダー-->
          <div class="m-1">
            <%= link_to "ユーザ一覧", admin_customers_path, class: 'nav-link text-dark border border-secondary rounded' %>
          </div>
          <div class="m-1">
            <%= link_to "投稿一覧", admin_posts_path, class: 'nav-link text-dark border border-secondary rounded' %>
          </div>
          <div class="m-1">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark border border-secondary rounded' %>
          </div>
        <% else %>
          <!--ログアウト時のヘッダー-->
          <div class="m-1">
            <%= link_to "About", about_path, class: 'nav-link text-center text-dark border border-secondary rounded', style: "width: 80px" %>
          </div>
          <div class="m-1">
            <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark border border-secondary rounded' %>
          </div>
          <div class="m-1">
            <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark border border-secondary rounded' %>
          </div>
        <% end %>
        
      
    </div>
  

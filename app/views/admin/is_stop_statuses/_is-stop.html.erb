<% if customer.is_stopping == true %>
  <%= link_to "利用再開", admin_customer_is_restart_path(customer),
  method: :delete, remote: true, class: 'btn btn-outline-secondary btn-block' %>
<% else %>
  <%= link_to "利用停止", admin_customer_is_stop_path(customer),
  method: :post, remote: true, class: 'btn btn-outline-secondary btn-block' %>
<% end %>
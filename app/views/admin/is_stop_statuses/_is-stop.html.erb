<% if customer.is_stopping == true %>
  <%= link_to "利用再開", admin_customer_is_restart_path(customer),
  method: :delete, remote: true, data: { confirm: '本当にこのユーザーの利用停止を解除しますか？' }, class: 'btn btn-outline-secondary btn-block' %>
<% else %>
  <%= link_to "利用停止", admin_customer_is_stop_path(customer),
  method: :post, remote: true, data: { confirm: '本当にこのユーザーを利用停止しますか？' }, class: 'btn btn-outline-secondary btn-block' %>
<% end %>
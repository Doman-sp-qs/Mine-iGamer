<!--ヘッダー-->
<header class="sticky-top bg-white" style="border-bottom: 5px solid #d8d8d8;">
  <div style="height: 80px">
    <!--空白-->
  </div>
</header>

<!--プロフィール-->
<div class="pt-2 pb-3 mx-4 bg-white" style="border-bottom: 3px solid #d8d8d8;">
  <%= render 'admin/customers/info', customer: @customer %>
</div>

<!--編集フォーム-->
<div class="col-md-8 mx-auto my-3">
  <h2>プロフィール編集</h2>
  <%= form_with model:@customer, url:admin_customer_path(@customer), method: :patch, local:true do |f| %>
    <%#= render 'layouts/errors', obj: @customer %>
    <div class="form-group">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: "form-control name" %>
    </div>
   <div class="form-group">
      <%= f.label :image, "プロフィール画像" %>
      <%= f.file_field :profile_image, class: "form-control-file customer_image", accept: 'image/*' %>
    </div>
    <div class="form-group">
      <%= f.label :introduction, "自己紹介" %>
      <%= f.text_area :introduction, class: "form-control introduction" %>
    </div>
    <div class="form-group">
      <%= f.submit "更新", class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>

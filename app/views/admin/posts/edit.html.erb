<h1>Admin::Posts#edit</h1>
<p>Find me in app/views/admin/posts/edit.html.erb</p>

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Post</h1>
      <%= form_with model:@post, url:admin_post_path(@post), method: :patch, local:true do |f| %>
        <div class="form-group">
          <%= f.label :game_name %>
          <%= f.text_field :game_name, class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to 'Show', admin_post_path(@post.id) %> |
      <%= link_to 'Back', admin_posts_path, class: "back" %>
    </div>
  </div>
</div>
<h1>Admin::Posts#show</h1>
<p>Find me in app/views/admin/posts/show.html.erb</p>

<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'public/customers/info', customer: @customer %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>post detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to(admin_customer_path(@post.customer_id)) do %>
              <%#= image_tag @post.customer.get_profile_image, size:"100x100" %><br>
              <%= @post.customer.name %>
            <% end %>
          </td>
          <td><%= link_to @post.title, admin_post_path(@post.id) %></td>
          <td><%= @post.body %></td>
          
          <% if current_admin %>
            <td>
              いいね <strong><%= @post.favorites.count %></strong> 件
            </td>
          <% else %>
            <td id="favorite-btn_<%= @post.id %>">
              <%= render 'public/favorites/favorite-btn', post: @post %>
            </td>
          <% end %>
          
          <td>
            コメント <strong><%= @post.post_comments.count %></strong> 件
          </td>
          <% if current_admin || @post.customer_id == current_customer.id %>
            <td><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <div class="mt-5">
        <%= render 'public/post_comments/index', post: @post %>
        <%= form_with model: [@post, @post_comment] do |f| %>
          <%= f.label 'コメント' %><br />
          <%= f.text_area :post_comment, class: 'form-control' %><br />
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

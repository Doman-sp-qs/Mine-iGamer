<!--上部固定-->
<div class="sticky-top">
  <!--ヘッダー-->
  <%= render 'layouts/header' %>
  
  <!--プロフィール-->
  <div class="pt-2 pb-3 mx-4 bg-white" style="border-bottom: 3px solid #d8d8d8;">
    <%= render 'info', customer: @customer %>
  </div>
</div>

<!--ページタイトルと投稿一覧-->
<div class="mt-3">
  <!--ページタイトル-->
  <h4 class="text-center text-secondary">
    <%= @customer.name %> さんの投稿一覧
    <i class="fas fa-mail-bulk"></i>
  </h4>
  <!--投稿一覧-->
  <div class="mx-4">
    <%= render 'public/posts/index', posts: @posts %>
    
    <!--該当する投稿の有無判定-->
    <% unless @posts.exists?(@posts) %>
      <!--該当する投稿がないとき-->
      <h3 class="m-5">投稿はありません</h3>
    <% end %>
  </div>
</div>


<% if customer_signed_in? %>
  <div class="search_form">
    <%= form_with url: public_search_path, local: true, method: :get do |f| %>
      <div class="row">
        <div class="col-md-8">
          <div class="my-1">
            <%= f.text_field :word %>
          </div>
          <div class="my-1">
            <%= f.select :range, options_for_select([['ユーザ名'], ['ゲーム名']]) %>
          </div>
          <div class="my-1">
            <%= f.select :search, options_for_select([["完全一致","perfect_match"],
                                                      ["前方一致","forward_match"],
                                                      ["後方一致","backward_match"],
                                                      ["部分一致","partial_match"]]) %>
          </div>
        </div>
        <div class="col-md-4">
          <%= f.submit "検索", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


  <h2>Results index</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <% if @range == "Customer" %>
        
          <!--検索対象モデルがCustomerの時 -->
          <% @customers.each do |customer| %>
            <%= render 'public/customers/index', customers: @customers %>
          <% end %>
        <% else %>
        <!--検索対象モデルがCustomerではない時(= 検索対象モデルがPostの時) -->
          <% @posts.each do |post| %>
            <%= render 'public/posts/index', posts: @posts %>
          <% end %>
        <% end %>
      </tbody>
    </table>
    
    
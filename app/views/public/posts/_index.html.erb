<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to(customer_path(post.customer_id)) do %>
            <%#= image_tag post.customer.get_profile_image, size:'50x50' %>
            image
          <% end %>
        </td>
        <td><%= link_to post.title,post_path(post.id) %></td>
        <td><%= post.body %></td>
        <td id="favorite-btn_<%= post.id %>">
          <%= render 'favorites/favorite-btn', post: post %>
        </td>
        <td>コメント数:<%= post.post_comments.count %></td>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
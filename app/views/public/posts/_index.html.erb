<% posts.each do |post| %>
  <div class="card">
    <% if current_admin %>
      <div class="col-1">
        <%= link_to(admin_customer_path(post.customer_id)) do %>
          <%= image_tag post.customer.get_profile_image(100,100) %><br>
          <%= post.customer.name %>
        <% end %>
      </div>]
      <div class="col-8">
        
        <div class="col-6">
          <h3></h3>
          <h3></h3>
          <h4></h4>
        </div>
        <div class="col-2">
          
        </div>
      </div>
    <% else %>
    <div class="row">
      <div class="col-2">
        <%= link_to(customer_path(post.customer_id)) do %>
          <%= image_tag post.customer.get_profile_image(100,100) %><br>
        <% end %>
      </div>
      <div class="col-10">
        <h5><%= link_to post.customer.name, customer_path(post.customer_id) %></h5>
        
        <div class="row">
        <div class="col-9">
          <h3><%= post.game_name %></h3>
          <h3 class="text-black"><%= link_to post.title, post_path(post.id), class:"text-body" %></h3>
          <h4><%= post.body %></h4>
        </div>
        <div class="col-3">
          <div id="favorite-btn_<%= post.id %>">
            <%= render 'public/favorites/favorite-btn', post: post %><br>
          </div>
          <h4>コメント <strong><%= post.post_comments.count %></strong> 件</h4>
        </div>
        
        
        </div>
      </div>
      </div>
    <% end %>
  </div>
<% end %>



<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Game Title</th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <% if current_admin %>
          <td>
            <%= link_to(admin_customer_path(post.customer_id)) do %>
              <%#= image_tag post.customer.get_profile_image, size:'50x50' %>
              image<br>
              <%= post.customer.name %>
            <% end %>
          </td>
          <td><%= link_to post.game_name, admin_post_path(post.id) %></td>
          <td><%= link_to post.title, admin_post_path(post.id) %></td>
          <td><%= post.body %></td>
          <td>
            いいね <strong><%= post.favorites.count %></strong> 件<br>
            コメント <strong><%= post.post_comments.count %></strong> 件
          </td>
        <% else %>
          <td>
            <%= link_to(customer_path(post.customer_id)) do %>
              <%#= image_tag post.customer.get_profile_image, size:'50x50' %>
              image<br>
              <%= post.customer.name %>
            <% end %>
          </td>
          <td><%= link_to post.game_name, post_path(post.id) %></td>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
          <td>
            <div id="favorite-btn_<%= post.id %>">
              <%= render 'public/favorites/favorite-btn', post: post %><br>
            </div>
            コメント <strong><%= post.post_comments.count %></strong> 件
          </td>
        <% end %>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
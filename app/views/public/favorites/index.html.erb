<!--ヘッダー-->
<%= render 'layouts/header' %>

<!--ページタイトル-->
<h2 class="text-center text-secondary mt-2">
  いいねした投稿
  <i class="fas fa-mail-bulk"></i>
  <i class="fas fa-heart"></i>
</h2>

<!--いいね一覧-->
<%= render 'public/posts/index', posts: @favorite_posts %>

<!--該当する投稿の有無判定-->
<% if @favorite_posts == [] %>
  <!--該当する投稿がないとき-->
  <h3 class="m-5">いいねした投稿はありません</h3>
<% end %>
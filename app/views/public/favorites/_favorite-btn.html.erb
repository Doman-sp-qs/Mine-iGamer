<% if post.favorited_by?(current_customer) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true, class: 'text-danger' do %>
    <i class="fas fa-heart"></i><%= post.favorites.count %>
  <% end %>
  
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, class: 'text-primary' do %>
    <i class="fas fa-heart"></i><%= post.favorites.count %>
  <% end %>
<% end %>
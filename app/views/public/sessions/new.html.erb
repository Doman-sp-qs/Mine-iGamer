<!--ヘッダー-->
<%= render 'layouts/header' %>

<!--ログインフォーム-->
<div class="row">
  <div class="col-md-7 text-center shadow-lg rounded mx-auto px-0 my-5">
    <h5 class="text-center text-dark bg-light py-4">ユーザーログイン</h5>
    <div class="form-body p-4">
      
      <div class="mx-auto text-center mb-4">
        <!-- ここからを追加 -->
        <p>メールアドレスと<br>パスワードを入力してください。</p>
        <!-- ここまでを追加 -->
      </div>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-group my-2">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
          </div>
          
          <%= f.email_field :email, autofocus: true, placeholder: "email", class:"form-control" %>
        </div>
        
        <div class="input-group my-2">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
          </div>
          
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class:"form-control" %>
        </div>
        
        <!--remember meチェックボックス-->
        <%# if devise_mapping.rememberable? %>
          <!--<div class="input-group my-2">-->
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          <!--</div>-->
        <%# end %>
      
        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-info mt-4 px-5" %>
        </div>
      <% end %>
      
    </div>
    <div class="bg-light py-4">
      <span class="text-secondary">アカウントをお持ちでない方は</span>
      <%= render "public/shared/links" %>
    </div>
    
  </div>
</div>


